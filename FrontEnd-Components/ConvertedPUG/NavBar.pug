nav.navbar.is-fixed-top.is-light(aria-label='main navigation' role='navigation')
    .navbar-brand
        a.navbar-item(href='/index.html')
            img(src='/images/FVSRLogo.png' alt='FVSR_Logo')
        // Mobile Menu
        a.navbar-burger(aria-expanded='false' aria-label='menu' data-target='navbarBasicExample' role='button')
            span(aria-hidden='true')
            span(aria-hidden='true')
            span(aria-hidden='true')
    #mainSiteNavBar.navbar-menu
        .navbar-start
            a.navbar-item
                | Home
            .navbar-item.has-dropdown.is-hoverable
                a.navbar-link
                    | More
                .navbar-dropdown
                    a.navbar-item
                        | About
                    a.navbar-item
                        | Contact
                    hr.navbar-divider
                    a.navbar-item
                        | Report an issue

        if !user.isLoggedIn
            .navbar-end
                .navbar-item
                    .buttons
                        a.button.is-info
                            strong Sign up
                        a.button.is-inverted
                            | Log in
        else
            .navbar-end
                .navbar-item.is-hoverable.has-dropdown
                    a.navbar-link Hello there, #{user.firstName}
                    .navbar-dropdown
                        a.navbar-item Manage Account
                        a.navbar-item Settings
                        hr.navbar-divider
                        a.navbar-item Sign Out
                .navbar-item
                    a.button.is-danger(href='/index.html')
                        span.icon
                            i.fas.fa-sign-out-alt
                        span Sign Out