section.section.is-large
    .container
        h1.title
            | Login Form
        p.subtitle
            | Please login to continue
        form
            // Text input
            .field
                label.label(for='username') Username / Email
                .control
                    input#username.input(name='username' placeholder='Username or Email Address' required='' type='text')
            // Password input
            .field
                label.label(for='password') Password
                .control
                    input#password.input(name='password' placeholder='Password' required='' type='password')
            .field
                .control.is-pulled-right
                    .buttons
                        button.button.is-info(type='submit') Login
