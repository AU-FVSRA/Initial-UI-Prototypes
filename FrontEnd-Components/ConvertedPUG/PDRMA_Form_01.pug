                        .control
                            input#witnessCity.input(name='witnessCity' type='text' value='')
                .column
                    // Text input
                    .field
                        label.label(for='witnessState') State
                        .control
                            input#witnessState.input(name='witnessState' type='text' value='')
                .column
                    // Text input
                    .field
                        label.label(for='witnessPostalCode') Zip code
                        .control
                            input#witnessPostalCode.input(name='witnessPostalCode' type='text' value='')
