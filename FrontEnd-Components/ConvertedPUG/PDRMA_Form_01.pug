                .column
                    // Text input
                    .field
                        label.label(for='injuredPersonFirstName') First Name
                        .control
                            input#injuredPersonFirstName.input(name='injuredPersonFirstName' type='text' value='')
            // Text input
            .field
                label.label(for='injuredPersonStreetAddress') Address
                .control
                    input#injuredPersonStreetAddress.input(name='injuredPersonStreetAddress' type='text' value='')
            .columns
                .column
                    // Text input
                    .field
                        label.label(for='injuredPersonCity') City
                        .control
                            input#injuredPersonCity.input(name='injuredPersonCity' type='text' value='')
                .column
                    // Text input
                    .field
                        label.label(for='injuredPersonState') State
                        .control
                            input#injuredPersonState.input(name='injuredPersonState' type='text' value='')
                .column
                    // Text input
                    .field
