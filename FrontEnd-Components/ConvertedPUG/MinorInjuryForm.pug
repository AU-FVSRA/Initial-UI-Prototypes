section.section
    .container
        h1.title
            | Minor Injury Report Form
        p.subtitle
            | Please fill out the form below to report a minor injury.
        // form below
        form#minorInjuryReportForm(method='post')
            // Form section #1
            .columns
                // warning/instructions
                #instructionsCol.column
                    article.message.is-danger
                        .message-header
                            p Instructions
                            button.delete(type='button' onclick='hideInstructions()')
                        .message-body
                            .content
                                ol
                                    li
                                        strong Administer necessary first aid
                                    li
                                        | Document minor injuries utilizing this form
                                        ul
                                            li (For serious injuries please utilize PDRMA forms)
                                    li Notify parent/guardian upon dismissal from program
                // program/group name
                .column
                    .field
                        label.label(for='programName') Program/Group Name
                        .control.has-icons-left
                            span#programSelection.select
                                select#programName(name='programName')
                                    option(value='') Select Program/Group
                                    option(value='1') Basketball Program - Summer
                                    option(value='2') Option 2
                                    option(value='3') Option 3
                                    option(value='4') Option 4
                                    option(value='5') Option 5
                                    option(value='addNewProgram') Add New...
                            span.icon.is-small.is-left
                                i.fas.fa-globe
                    .field
                        label.label(for='programLeader') Program Leader(s)
                        .control
                            input#programLeader.input(name='programLeader' type='text')
                    .field
                        label.label(for='programSeasonYear') Program Season/Year
                        .control
                            input#programSeasonYear.input(name='programSeasonYear' type='text')
            hr
            // Form Section #2
            .field
                .columns
                    .column
                        label.label(for='injuryDate') Injury Date
                        .control
                            input#injuryDate.input(name='injuryDate' type='date')
                    .column
                        label.label(for='injuryTime') Injury Time
                        .control
                            input#injuryTime.input(name='injuryTime' type='time')
            .field
                label.label(for='nameOfInjured') Name of Injured Person
                .control
                    input#nameOfInjured.input(name='nameOfInjured' placeholder='Name of Injured Person' type='text')
            .field
                label.label(for='injuryLocation') Location of Injury on Person
                .control
                    input#injuryLocation.input(name='injuryLocation' placeholder='Location of Injury (Ex. Right Elbow, Left Knee, etc.)' type='text')
            .field
                label.label(for='treatmentAdministered') Treatment Administered
                .control
                    input#treatmentAdministered.input(name='treatmentAdministered' placeholder='Treatment Administered (Ex. Rinsed wound, applied bandage, ice pack provided, etc.)' type='text')
            .field
                label.label(for='howInjuryOccurred') How Injury Occurred
                .control
                    textarea#howInjuryOccurred.textarea(name='howInjuryOccurred' placeholder='Explain how the injury occurred (Ex. Fell off swing)')
            .field
                label.label(for='locationInjuryOccurred') Facility/Location Injury Occurred
                .control
                    textarea#locationInjuryOccurred.textarea(name='locationInjuryOccurred' placeholder='Where did the injury take place? (Ex. Harmony Park Swings)' rows='2')
            .field
                label.label(for='staffWhoNotified') Full Name of Staff Who Notified Parent/Guardian
                .control
                    input#staffWhoNotified.input(name='staffWhoNotified' placeholder='Staff member who notified parent/guardian of injured peron.' type='text')
            .field.is-pulled-right
                .control
                    input.button.is-info(type='submit' value='Submit')

script(type='text/javascript').
    //hide the column with id="instructionsCol"
    function hideInstructions() {
        document.getElementById("instructionsCol").style.display = "none";
    }
